%h2.session_title ~ ログイン ~
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .field
    = f.label :email,class:"session_email"
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email",class:"session_email-field"
  .field
    = f.label :password,class:"session_password"
    %br/
    = f.password_field :password, autocomplete: "current-password",class:"session_password-field"
  - if devise_mapping.rememberable?
    .field
      = f.check_box :remember_me
      = f.label :"パスワードを保存する"
  .actions
    = f.submit "ログイン",class:"submit_login"

