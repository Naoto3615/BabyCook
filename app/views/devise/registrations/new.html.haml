%h2.new-registration_title 〜新規会員登録〜
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :nickname, "ニックネーム",class:"registration_nickname"
    %br/
    = f.text_field :nickname, autofocus: true, autocomplete: "nickname",class:"registration_nickname-field"
  .field
    = f.label :profile,"プロフィール",class:"registration_profile"
    %br/
    = f.text_area :profile, autofocus: true, autocomplete: "profile",class:"registration_profile-field"
  .field
    = f.label :profile_image,"プロフィール画像",class:"registration_profile_image"
    %br/
    = f.file_field :profile_image, autofocus: true,class:"registration_profile_image-field"
  .field
    = f.label :email,"メールアドレス",class:"registration_email"
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email",class:"registration_email-field"
  .field
    = f.label :password,"パスワード",class:"registration_password"
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} 文字以上)
    %br/
    = f.password_field :password, autocomplete: "new-password",class:"registration_password-field"
  .field
    = f.label :password_confirmation,class:"registration_password_confirmation"
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password",class:"registration_password_confirmation-field"
  .actions
    = f.submit "登録",class:"registration_submit"
